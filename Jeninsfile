pipeline {
    agent any
    stages {
        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }
        
        stage('Terraform Apply') {
            steps {
                withCredentials([usernamePassword(credentialsId: '0e5fbbc9-14c0-40c0-bd2a-adc3ae6d214a', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    script {
                        sh "terraform apply -var='aws_acces=$USERNAME' -var='aws_secret=$PASSWORD' -auto-approve"
                        
                    }
                }
            }
        }
    }
}